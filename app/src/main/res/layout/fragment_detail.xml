<?xml version="1.0" encoding="utf-8"?>

  <androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <!--앨범 정보 상세-->

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/album_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범명"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/album_name2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glitch Mode - The 2nd Album"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/artist_tv"
        app:layout_constraintTop_toTopOf="@+id/album_name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/album_name_tv"/>

    <TextView
        android:id="@+id/artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아티스트"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/album_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/artist2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NCT DREAM"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/artist_tv"
        app:layout_constraintTop_toTopOf="@+id/artist_tv"
        app:layout_constraintBottom_toBottomOf="@+id/artist_tv"/>

    <TextView
        android:id="@+id/publisher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발매사"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/artist_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/publisher2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dreamus"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/artist_tv"
        app:layout_constraintTop_toTopOf="@+id/publisher_tv"
        app:layout_constraintBottom_toBottomOf="@+id/publisher_tv"/>


    <TextView
        android:id="@+id/agency_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기획사"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/publisher_tv"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/agency2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SM ENTERTAINMENT"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/artist_tv"
        app:layout_constraintTop_toTopOf="@+id/agency_tv"
        app:layout_constraintBottom_toBottomOf="@+id/agency_tv"/>

    <TextView
        android:id="@+id/introduction_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범소개"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/agency_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="타이틀 곡 '버퍼링 (GlitchMode)' 포함 다채로운 장르의 총 11곡 수록!"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/introduction_tv"
        app:layout_constraintTop_toBottomOf="@+id/introduction_tv"/>



  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>